{
  "expo": {
    "name": "BetterU",
    "slug": "betteru",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "frontend",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "extra": {
      "api_url": "https://betteru-backend.onrender.com/api",
      "eas": {
        "projectId": "e56abc1f-3bfa-46a2-9d45-73a907470000"
      }
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.anonymous.frontend",
      "permissions": [
        "READ_EXTERNAL_STORAGE",
        "RECORD_AUDIO",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "@react-native-voice/voice",
        {
          "microphonePermission": "Allow BetterU to access your microphone for voice input.",
          "speechRecognitionPermission": "Allow BetterU to use speech recognition."
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "buildToolsVersion": "35.0.0",
            "extraGradleProperties": {
              "android.useAndroidX": true,
              "android.enableJetifier": true
            }
          }
        }
      ]
    ]
  }
}
